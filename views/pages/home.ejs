<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.0.0/mdb.min.css"
            rel="stylesheet"
        />
        <title><%= pageTitle %></title>
    </head>
    <body>
        <!-- Navigation -->
        <%- include ('../partials/navigation') %>
        <main>
            <!-- Totals -->
            <%- include ('../partials/totals') %>
            <nav class="navbar navbar-light bg-light">
                <ul class="pagination">
                    <% pageNumbers.forEach(page => { %>
                    <li class="page-item">
                        <a href="#" class="page-link"> <%= page %> </a>
                    </li>
                    <% }) %>
                </ul>
            </nav>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Country</th>
                        <th scope="col">New Cases</th>
                        <th scope="col">Total Cases</th>
                        <th scope="col">Total Deaths</th>
                    </tr>
                </thead>
                <tbody>
                    <% initResult.forEach((property) => { %>
                    <tr>
                        <th scope="row"><%= property.Country %></th>
                        <td><%= property.NewConfirmed %></td>
                        <td><%= property.TotalConfirmed %></td>
                        <td><%= property.TotalDeaths %></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </main>
        <!-- Footer -->
        <%- include ('../partials/footer') %>
    </body>
</html>
